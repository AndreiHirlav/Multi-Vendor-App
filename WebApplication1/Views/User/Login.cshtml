@model WebApplication1.Models.TblUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/UserMasterLayout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 mb-5">
            <span class="display-6 fw-bold text-success text-center mb-5">Login</span>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <span class="text-danger">@ViewBag.error</span>
            <div class="input-group mt-2">
                <div class="input-group-text"><i class="fa fa-user"></i></div>
                @Html.TextBoxFor(x => x.UEmail, new { @class = "form-control", @placeholder = "Email Address" })
                @Html.ValidationMessageFor(x => x.UEmail, "*", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-1">
                <div class="input-group-text"><i class="fa fa-lock-open"></i></div>
                @Html.PasswordFor(x => x.UPassword, new {@class = "form-control", @placeholder = "Password" })
                @Html.ValidationMessageFor(x => x.UPassword, "*", new { @class = "text-danger" })
            </div>
            <div class="input-group mt-2">
                <input type="submit" class="btn btn-success w-100" value="Login" />
            </div>
            <div class="input-group mt-2">
                <a href="@Url.Action("SignUp", "User")" class="btn btn-success w-100">Sign Up</a>
            </div>
        </div>
        <div class="col-md-4"></div>

    </div>

}