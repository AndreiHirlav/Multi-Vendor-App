@model WebApplication1.Models.TblAdmin
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/AdminMasterLayout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 mb-5">
                <span class="display-6 fw-bold text-success text-center mb-5">Register</span>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <span class="text-danger">@ViewBag.error</span>
                <div class="input-group mt-2">
                    <div class="input-group-text"><i class="fa fa-user"></i></div>
                    @Html.TextBoxFor(x => x.AdUsername, new { @class = "form-control", @placeholder = "Username" })
                    @Html.ValidationMessageFor(x => x.AdUsername, "*", new { @class = "text-danger" })
                </div>
                <label class="visually-hidden" for="autoSizingInputGroup">Password</label>
                <div class="input-group mt-1">
                    <div class="input-group-text">@@</div>
                    @Html.PasswordFor(x => x.AdPassword, new { @class = "form-control", @placeholder = "Password" })
                    @Html.ValidationMessageFor(x => x.AdPassword, "*", new { @class = "text-danger" })
                </div>
                <div class="input-group mt-2">
                    <input type="submit" class="btn btn-success w-100" value="Register" />
                </div>
            </div>
            <div class="col-md-4"></div>

        </div>

    }
</body>
</html>