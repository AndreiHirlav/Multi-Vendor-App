@model WebApplication1.Models.TblCategory
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/AdminMasterLayout.cshtml";
}

<!doctype html>
<html lang="en">

<body>
    @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 mb-5">
                <span class="display-6 fw-bold text-danger text-center mb-5">Add Category</span>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <span class="text-danger">@ViewBag.error</span>
                <div class="input-group mt-2">
                    <div class="input-group-text"><i class="fa fa-user"></i></div>
                    @Html.TextBoxFor(x => x.CatName, new { @class = "form-control", @placeholder = "Category Name" })
                    @Html.ValidationMessageFor(x => x.CatName, "*", new { @class = "text-danger" })
                </div>
                <div class="input-group mt-1">
                    <div class="input-group-text"><i class="fa fa-image"></i></div>
                    <input type="file" id="imgfile" name="imgfile" class="form-control" required="required" />
                </div>
                <div class="input-group mt-2">
                    <input type="submit" class="btn btn-success w-100" value="Add" />
                </div>
            </div>
            <div class="col-md-4"></div>

        </div>

    }
</body>
</html>